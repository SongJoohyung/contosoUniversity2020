@model IEnumerable<contosoUniversity2020.Models.Course>

@{
    ViewData["Title"] = "Our Courses";
}

<h1>Our Courses</h1>

<div class="my-3">
    @{ 
        //Check for number of items
        int numItems = Model.Count();
        if(numItems > 0)
        {
            //Display the courses
            <h4>@numItems  Total Courses</h4>
            <div class="row">
                @foreach(var item in Model)
                {
                    <div class="col-md-4 my-2">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h3 class="card-title text-white bg-dark">@item.CourseIdTitle</h3>
                                <p class="card-subtitle">@item.Credits credits</p>
                                <p class:card-text>Description would be here</p>
                                <p class="card-subtitle"></p>
                                <p class="card-text"></p>
                                <a class="btn btn-secondary"
                                   asp-action="Details" asp-route-id="@item.CourseID">View Details</a>
                            </div>
                        </div>
                    </div>
        }

            </div>
        }
    } 

</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CourseID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CourseID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CourseID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
